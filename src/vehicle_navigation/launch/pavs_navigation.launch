<launch>
    <!-- 是否打开rviz || Whether to open rviz -->
    <arg name="use_rviz" default="false"/>
    <arg name="nav_use_rotvel" default="true"/>
    
    <!-- 地图名 || Map name  my_map-->
    <arg name="map" default="map"/>

    <!-- MarkerArray node> -->
    <node name='send_mark' pkg="pavs_navigation" type="send_mark.py"/>

    <!-- 加载地图 || Load map -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find vehicle_mapping)/maps/$(arg map).yaml"/>
    
    <!-- AMCL自适应蒙特卡洛定位 -->
    <include file="$(find vehicle_navigation)/launch/library/amcl.launch"/>

    <!-- 导航核心组件move_base -->
    <include file="$(find vehicle_navigation)/launch/library/move_base.launch">
        <arg name="nav_use_rotvel" value="$(arg nav_use_rotvel)"/>
    </include>
    
    <!-- RVIZ -->
    <include file="$(find vehicle_navigation)/launch/view/view_navigate.launch" if="$(arg use_rviz)"/>
</launch>

